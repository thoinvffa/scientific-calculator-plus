<?xml version="1.0" encoding="utf-8"?>
<inset android:insetLeft="1.5dip" android:insetRight="1.5dip"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <selector>
        <item android:state_pressed="true">
            <shape>
                <solid android:color="@color/blue_holo_dark" />
                <stroke android:width="2.0dip" android:color="@color/blue_holo_shadow" />
                <corners android:radius="4.0dip" />
            </shape>
        </item>
        <item>
            <layer-list>
                <item>
                    <shape>
                        <solid android:color="@color/blue_holo_shadow" />
                        <corners android:radius="4.0dip" />
                    </shape>
                </item>
                <item>
                    <shape>
                        <gradient android:startColor="@color/transparent_black" android:endColor="@color/blue_holo_shadow" android:angle="180.0" android:centerX="0.91" android:centerColor="@color/transparent_black" />
                        <corners android:radius="4.0dip" />
                    </shape>
                </item>
                <item>
                    <shape>
                        <gradient android:startColor="@color/transparent_black" android:endColor="@color/blue_holo_shadow" android:angle="360.0" android:centerX="0.83" android:centerColor="@color/transparent_black" />
                        <corners android:radius="4.0dip" />
                    </shape>
                </item>
                <item>
                    <shape>
                        <gradient android:startColor="@color/transparent_black" android:endColor="@color/blue_holo_shadow" android:angle="-90.0" android:centerY="0.84" android:centerColor="@color/transparent_black" />
                        <corners android:radius="4.0dip" />
                    </shape>
                </item>
                <item>
                    <shape>
                        <gradient android:startColor="@color/transparent_black" android:endColor="@color/blue_holo_shadow" android:angle="90.0" android:centerY="0.8" android:centerColor="@color/transparent_black" />
                        <corners android:radius="4.0dip" />
                    </shape>
                </item>
            </layer-list>
        </item>
    </selector>
</inset>