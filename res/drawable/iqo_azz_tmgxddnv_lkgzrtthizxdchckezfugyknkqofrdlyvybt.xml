<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#ffbbbdbc" />
            <corners android:radius="5.0dip" />
        </shape>
    </item>
    <item>
        <layer-list>
            <item>
                <shape>
                    <solid android:color="#ffc8c0c0" />
                    <padding android:left="0.5dip" android:top="0.5dip" android:right="0.5dip" android:bottom="2.0dip" />
                    <corners android:radius="5.0dip" />
                </shape>
            </item>
            <item>
                <shape>
                    <solid android:color="#fff9f3f5" />
                    <padding android:left="0.5dip" android:top="0.5dip" android:right="0.5dip" android:bottom="1.0dip" />
                    <corners android:radius="5.0dip" />
                </shape>
            </item>
            <item>
                <shape>
                    <gradient android:startColor="#fffcf9f8" android:endColor="#fff0f0ee" android:angle="-90.0" />
                    <corners android:radius="5.0dip" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>