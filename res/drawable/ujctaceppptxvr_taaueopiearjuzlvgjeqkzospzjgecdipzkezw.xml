<?xml version="1.0" encoding="utf-8"?>
<inset android:insetLeft="1.5dip" android:insetRight="1.5dip"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <selector>
        <item android:state_pressed="true">
            <shape>
                <solid android:color="@color/color_neon_green_light" />
                <stroke android:width="2.0dip" android:color="@color/color_neon_green_medium" />
                <corners android:radius="4.0dip" />
            </shape>
        </item>
        <item>
            <layer-list>
                <item>
                    <shape>
                        <solid android:color="#5d00e713" />
                        <corners android:radius="4.0dip" />
                    </shape>
                </item>
                <item android:left="1.0dip" android:top="1.0dip" android:right="1.0dip" android:bottom="1.0dip">
                    <shape>
                        <corners android:radius="4.0dip" />
                        <stroke android:width="1.0dip" android:color="@color/color_neon_green_bright" />
                    </shape>
                </item>
                <item>
                    <shape>
                        <gradient android:startColor="@color/transparent_black" android:endColor="@color/color_neon_green_light" android:angle="180.0" android:centerX="0.83" android:centerColor="@color/transparent_black" />
                        <corners android:radius="4.0dip" />
                    </shape>
                </item>
                <item>
                    <shape>
                        <gradient android:startColor="@color/transparent_black" android:endColor="@color/color_neon_green_light" android:angle="360.0" android:centerX="0.83" android:centerColor="@color/transparent_black" />
                        <corners android:radius="4.0dip" />
                    </shape>
                </item>
                <item>
                    <shape>
                        <gradient android:startColor="@color/transparent_black" android:endColor="@color/color_neon_green_light" android:angle="-90.0" android:type="linear" android:centerY="0.83" android:centerColor="@color/transparent_black" />
                        <corners android:radius="4.0dip" />
                    </shape>
                </item>
                <item>
                    <shape>
                        <gradient android:startColor="@color/transparent_black" android:endColor="@color/color_neon_green_light" android:angle="90.0" android:type="linear" android:centerY="0.83" android:centerColor="@color/transparent_black" />
                        <corners android:radius="4.0dip" />
                    </shape>
                </item>
            </layer-list>
        </item>
    </selector>
</inset>