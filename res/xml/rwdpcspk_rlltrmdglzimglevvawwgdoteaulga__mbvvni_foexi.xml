<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
  xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="Evaluator">
        <CheckBoxPreference android:title="Relaxed syntax" android:key="@string/pref_key_programming_relaxed_syntax" android:summary="@string/pref_desc_programming_relaxed_syntax" android:defaultValue="true" />
        <EditTextPreference android:title="Function recursion limit" android:key="@string/pref_key_function_recursion_limit" android:defaultValue="512" />
        <EditTextPreference android:title="Loop iteration limit" android:key="@string/pref_key_loop_iteration_limit" android:defaultValue="10000" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/editor">
        <Preference android:title="@string/change_theme" android:key="change_theme" />
        <com.jecelyin.editor.v2.preference.FontSizePreference android:title="@string/font_size" android:key="@string/pref_font_size" android:summary="@string/default_value" />
        <CheckBoxPreference android:title="@string/touch_to_adjust_text_size" android:key="@string/pref_touch_to_adjust_text_size" android:summary="Change font size (Zoom) with two finger" />
        <CheckBoxPreference android:title="@string/word_wrap_in_editor" android:key="@string/pref_word_wrap" android:summary="Use soft wrap in editor" />
        <CheckBoxPreference android:title="@string/show_linenumber" android:key="@string/pref_show_linenumber" />
        <CheckBoxPreference android:title="@string/show_whitespace" android:key="@string/pref_show_whitespace" />
        <CheckBoxPreference android:visibility="gone" android:title="@string/auto_indent" android:key="@string/pref_auto_indent" android:defaultValue="false" />
        <CheckBoxPreference android:visibility="gone" android:title="@string/auto_pair" android:key="@string/pref_auto_pair" android:summary="@string/pref_desc_auto_pair" android:defaultValue="false" />
        <CheckBoxPreference android:title="@string/insert_space_for_tab" android:key="@string/pref_insert_space_for_tab" />
        <EditTextPreference android:singleLine="true" android:maxLength="1" android:title="@string/tab_size" android:key="@string/pref_tab_size" android:summary="4" android:inputType="number" />
        <CheckBoxPreference android:visibility="gone" android:title="@string/auto_capitalize" android:key="@string/pref_auto_capitalize" android:summary="Not recommend" />
        <EditTextPreference android:visibility="gone" android:scrollbars="vertical" android:maxLines="7" android:title="@string/custom_symbol_list" android:key="@string/pref_symbol" android:negativeButtonText="@string/reset" />
        <CheckBoxPreference android:title="Symbol bar" android:key="@string/pref_key_show_symbol_bar" android:summary="Show list of symbols above soft keyboard." android:defaultValue="true" />
        <CheckBoxPreference android:title="Volume moving" android:key="@string/pref_volume_move" android:summary="Press volume up (+) to move cursor to right, press volume down (-) to move cursor to left" android:defaultValue="true" />
    </PreferenceCategory>
</PreferenceScreen>